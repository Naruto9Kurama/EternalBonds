<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.creator.eternalbonds.fragment.VideoPageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--播放器-->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/playerView"
            android:layout_width="match_parent"
            android:layout_height="200dp" />


        <!--播放器下方区域-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/snow">
            <!--播放信息区域-->
            <LinearLayout
                android:id="@+id/playInfoLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/playInfoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="播放信息区域" />
            </LinearLayout>
            <!--广告区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/playInfoLayout">
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广告区域"/>-->
            </LinearLayout>
            <!--打开侧边栏按钮-->
            <androidx.cardview.widget.CardView
                android:id="@+id/btnOpenDrawer"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                app:cardBackgroundColor="?colorPrimary"
                app:cardCornerRadius="50dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="3dp"
                        android:layout_marginBottom="7dp"
                        android:background="@color/white" />

                    <View
                        android:layout_width="30dp"
                        android:layout_height="3dp"
                        android:background="@color/white" />

                    <View
                        android:layout_width="20dp"
                        android:layout_height="3dp"
                        android:layout_marginTop="7dp"
                        android:background="@color/white" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <!--侧边栏-->
            <androidx.drawerlayout.widget.DrawerLayout
                android:id="@+id/drawerLayout"
                android:layout_width="300dp"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparent"
                app:layout_constraintLeft_toLeftOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    app:cardBackgroundColor="@color/lightgray"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <!--ip-->
                        <LinearLayout
                            android:id="@+id/ipLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            android:orientation="vertical">

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/ipTitleText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="ip提示"
                                android:textIsSelectable="true" />
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/ipRecycler"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                        <!--按钮组-->
                        <RadioGroup
                            android:id="@+id/playbackRadioGroup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/ipLayout">

                            <com.google.android.material.radiobutton.MaterialRadioButton
                                android:id="@+id/localFilesRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="本地文件" />


                            <RadioButton
                                android:id="@+id/httpRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="http地址" />


                            <RadioButton
                                android:id="@+id/screenCastingRadioButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="投屏" />
                        </RadioGroup>

                        <!--选择文件框-->
                        <LinearLayout
                            android:id="@+id/chooseFileLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintLeft_toRightOf="@+id/playbackRadioGroup"
                            app:layout_constraintTop_toTopOf="@+id/playbackRadioGroup">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/chooseFileBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="选择文件"
                                app:cornerRadius="20dp" />

                            <TextView
                                android:id="@+id/chooseFilePathText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                        <!--输入http框-->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintLeft_toRightOf="@+id/playbackRadioGroup"
                            app:layout_constraintTop_toBottomOf="@+id/chooseFileLayout"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/httpEditText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="请输入http视频地址" />
                        </LinearLayout>

                        <!--播放按钮-->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/startPlayer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="播放"
                            app:cornerRadius="20dp"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/playbackRadioGroup" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.drawerlayout.widget.DrawerLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

